<div
  class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom"
>
  <h1 class="h2">Banner</h1>
  <div class="btn-toolbar mb-2 mb-md 0">
    <div class="btn-group me-2">
      <button class="btn btn-sm btn-outline-secondary">?</button>
    </div>
  </div>
</div>

<div class="col py-3">
  <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/banner">Banner</a></li>
          <li class="breadcrumb-item active">New banner</li>
        </ol>
      </nav>
    </div>
    <div class="col text-end fw-lighter">
      <b>Banner</b>
    </div>
  </div>
</div>

<form action="/banner/insert" method="POST"  enctype="multipart/form-data">
  

  <div class="row form-group mb-4">
    <div class="col">
      <label style="margin: 5px;" for="lastName">Brand</label>
      <select id="brand" name="brand" class="form-select">
        <% for(var i=0; i <arrBrand.length; i++) { %>
          <option value="<%= arrBrand[i].brand %>">
            <%= arrBrand[i].brand %>
          </option>
          <%}%>
      </select>
    </div>
    <div class="col">
        <label style="margin: 5px;" for="lastName">Image</label>
        <input
          type="file"
          class="form-control"
          id="image"
          name="image"
          value=""
          placeholder="Image"
          required
        />
      </div>
  </div>
 

  <div class="form-group mb-4">
    <button type="submit" class="btn btn-primary">Add banner</button>
  </div>
</form>
